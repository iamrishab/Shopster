<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="176dp"
        android:layout_height="230dp"
        android:layout_weight="0.23"
        android:adjustViewBounds="false"
        android:padding="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        app:srcCompat="@drawable/common_signin_btn_text_disabled_focus_light" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="185dp"
        android:layout_height="245dp"
        android:layout_margin="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        android:padding="0dp"
        android:weightSum="1"
        android:layout_weight="0.13">

        <Button
            android:id="@+id/snapdeal"
            android:layout_width="120dp"
            android:layout_height="37dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="52dp"
            android:text="SnapDeal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/amazon"
            app:layout_constraintVertical_bias="0.055" />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="95dp"
            android:layout_height="23dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="0.05"
            android:text="Product Name"
            app:layout_constraintHorizontal_bias="0.354"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="7dp" />

        <TextView
            android:id="@+id/product_price"
            android:layout_width="95dp"
            android:layout_height="23dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="17dp"
            android:layout_weight="0.05"
            android:text="Product Price"
            app:layout_constraintHorizontal_bias="0.833"
            app:layout_constraintLeft_toLeftOf="@+id/product_name"
            app:layout_constraintRight_toRightOf="@+id/product_name"
            app:layout_constraintTop_toBottomOf="@+id/product_name" />

        <Button
            android:id="@+id/amazon"
            android:layout_width="119dp"
            android:layout_height="37dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="Amazon"
            app:layout_constraintHorizontal_bias="0.511"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/product_price" />


        <Button
            android:id="@+id/flipkart"
            android:layout_width="120dp"
            android:layout_height="37dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="Flipkart"
            app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/amazon" />


    </android.support.constraint.ConstraintLayout>

</LinearLayout>